                                        </div>
                                        <div class="col 6">

                                            <div class="form group">
                                                <label asp-for="Servicio" class="control-label"></label>
                                                <select asp-for="ServicioId" class="form-control input w-full border mt-2 flex-1" asp-items="ViewBag.Servicios">
                                                    <option value="0">Seleccione</option>
                                                </select>
                                                <span asp-validation-for="Servicio" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>

                                    <br />

                                    <div class="form group">

                                        <label asp-for="Descripcion" class="control-label"></label>
                                        <textarea asp-for="Descripcion" class="form-control input w-full border mt-2 flex-1" id="Descripcion"></textarea>
                                    </div>

                                    <table id="tabla" class="table">
                                        <thead>
                                            <tr>

                                                <th>
                                                    Tarea
                                                </th>
                                                <th>
                                                    Eliminar
                                                </th>

                                            </tr>
                                        </thead>
                                        <tbody id="d">
                                        </tbody>

                                    </table>

                                </div>

                                <div class="col 6" id="centerObjects">

                                    <button id="btnAgregarTareaC" type="button" class="btn btn-secondary" onclick="agregarTarea()">Agregar tarea</button>

                                    <div id="formularioTarea">

                                        <br />
                                        <h5>Nueva tarea</h5>

                                        <div class="row">

                                            <div class="col 6">

                                                <div class="form group">
                                                    <label asp-for="FechaInicioTarea" class="control-label"></label>
                                                    <input asp-for="FechaInicioTarea" class="form-control input w-full border mt-2 flex-1" type="datetime-local" />
                                                    <span asp-validation-for="FechaInicioTarea" class="text-danger"></span>
                                                </div>

                                            </div>

                                            <div class="col 6">

                                                <div class="form group">
                                                    <label asp-for="FechaFinTarea" class="control-label"></label>
