                                                </div>

                                            </div>
                                        </div>

                                        <br />

                                        <div class="row">

                                            <div class="col 6 ">

                                                <div class="form group">
                                                    <label asp-for="UsuarioIdentity" class="control-label"></label>
                                                    <select asp-for="UsuarioIdentityId" class="form-control input w-full border mt-2 flex-1" asp-items="ViewBag.Empleados">
                                                        <option value="0">Seleccione</option>
                                                    </select>
                                                    <span asp-validation-for="UsuarioIdentity" class="text-danger"></span>
                                                </div>
                                            </div>

                                            <div class="col 6">

                                                <div class="form group">
                                                    <label asp-for="Operacion" class="control-label"></label>
                                                    <select asp-for="OperacionId" class="form-control input w-full border mt-2 flex-1" asp-items="ViewBag.Operaciones">
                                                        <option value="0">Seleccione</option>
                                                    </select>
                                                    <span asp-validation-for="Operacion" class="text-danger"></span>
                                                </div>

                                            </div>
                                        </div>
                                        <div class="form group">

                                            <label asp-for="DescripcionTarea" class="control-label"></label>
                                            <textarea asp-for="DescripcionTarea" class="form-control input w-full border mt-2 flex-1"></textarea>
                                            <span asp-validation-for="DescripcionTarea" class="text-danger"></span>
                                        </div>
                                        <br />
