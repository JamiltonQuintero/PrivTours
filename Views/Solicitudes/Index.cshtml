                                                <option value="2">EN PROCESO</option>
                                                <option value="3">VENCIDO</option>
                                                <option value="4">CANCELADO</option>
                                                <option value="5">FINALIZADO EMPLEADO</option>
                                                <option value="6">FINALIZADO ADMINISTRADOR</option>
                                            </select>
