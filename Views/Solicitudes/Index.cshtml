                                            <div class="col 6">

                                                <div class="form group">
                                                    <label asp-for="FechaInicioTarea" class="control-label"></label>
                                                    <input asp-for="FechaInicioTarea" class="form-control input w-full border mt-2 flex-1" type="datetime-local" id="FechaInicioTareaD" />
                                                    <span asp-validation-for="FechaInicioTarea" class="text-danger"></span>
