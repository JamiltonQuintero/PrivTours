                                        <div class="row">

                                            <div class="col 6">

                                                <div class="form group">
                                                    <label asp-for="FechaInicioTarea" class="control-label"></label>
                                                    <input asp-for="FechaInicioTarea" class="form-control input w-full border mt-2 flex-1" type="datetime-local" id="FechaInicioTareaDA" />
                                                    <span asp-validation-for="FechaInicioTarea" class="text-danger"></span>
                                                </div>

                                            </div>

                                            <div class="col 6">

                                                <div class="form group">
                                                    <label asp-for="FechaFinTarea" class="control-label"></label>
                                                    <input asp-for="FechaFinTarea" class="form-control input w-full border mt-2 flex-1" type="datetime-local" id="FechaFinTareaDA" />
                                                    <span asp-validation-for="FechaFinTarea" class="text-danger"></span>
                                                </div>

                                            </div>
                                        </div>

                                        <br />

                                        <div class="row">

                                            <div class="col 6 ">

                                                <div class="form group">
                                                    <label asp-for="UsuarioIdentity" class="control-label"></label>
                                                    <select asp-for="UsuarioIdentityId" class="form-control input w-full border mt-2 flex-1" asp-items="ViewBag.Empleados" id="UsuarioIdentityIdDA">
                                                        <option value="0">Seleccione</option>
                                                    </select>
                                                    <span asp-validation-for="UsuarioIdentity" class="text-danger"></span>
                                                </div>
                                            </div>

                                            <div class="col 6">

                                                <div class="form group">
                                                    <label asp-for="Operacion" class="control-label"></label>
                                                    <select asp-for="OperacionId" class="form-control input w-full border mt-2 flex-1" asp-items="ViewBag.Operaciones" id="OperacionIdDA">
                                                        <option value="0">Seleccione</option>
                                                    </select>
                                                    <span asp-validation-for="Operacion" class="text-danger"></span>
                                                </div>

                                            </div>
                                        </div>
                                        <div class="form group">

                                            <label asp-for="DescripcionTarea" class="control-label"></label>
                                            <textarea asp-for="DescripcionTarea" class="form-control input w-full border mt-2 flex-1" id="DescripcionTareaDA"></textarea>
                                            <span asp-validation-for="DescripcionTarea" class="text-danger"></span>
                                        </div>

                                        <input asp-for="SolicitudId" class="form-control" style="visibility: hidden" id="TareaSolicitudIdDA" />
                                        <br />
                                        <div class="row">
                                            <div class="col 6">
                                                <button type="button" class="btn btn-danger" onclick="cerrarTareasEditarAgregar()">Cerrar</button>
                                            </div>
                                            <div class="col 6">
                                                <button type="button" class="btn btn-primary" onclick="editarAgregarTarea()">Agregar tarea</button>
                                            </div>
                                        </div>
                                        <br />
                                    </div>

                                </div>

                            </div>

                            <div class="modal-footer">

                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                                    <button type="button" class="btn btn-primary" onclick="editar()">Editar</button>
                                </div>
                            </div>

                        </div>
                    </div>
                </div><!--Fin Modal Detalle-->

            </div>


            <!-- Modal Crear -->

