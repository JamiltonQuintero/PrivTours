                                    </div>
                                    <input asp-for="SolicitudId" class="form-control" style="visibility: hidden" id="SolicitudIdD" />

                                    <div class="form group">

                                        <label asp-for="Descripcion" class="control-label"></label>
                                        <textarea asp-for="Descripcion" class="form-control input w-full border mt-2 flex-1" id="DescripcionD"></textarea>
                                    </div>

                                    <table id="tabla" class="table">
                                        <thead>
                                            <tr>

                                                <th>
                                                    Tarea
                                                </th>
                                                <th>
                                                    Editar
                                                </th>
                                                <th>
                                                    Eliminar
                                                </th>

                                            </tr>
                                        </thead>
                                        <tbody id="e">
                                        </tbody>

                                    </table>

                                </div>

                                <div class="col 6" id="centerObjects">

