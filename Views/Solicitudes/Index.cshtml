    <script src="~/js/CalendarioConf.js"></script>

    <script>

        $(function () {
            calendario();
            listar();
            start();
            limpiarModal();
            $('#formularioTarea').hide()
            $('#formularioTareaEdit').hide()
            $('#formularioTareaEditAgregar').hide() 
