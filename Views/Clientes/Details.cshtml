    <div class="content">
        <div class="container-fluid">
            <div class="row">



                <table class="tabla" id="tabla">
                    <thead>
                        <tr>

                            <th>
                                @Html.DisplayNameFor(model => model.ClienteId)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Nombre)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Apellidos)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.IdTipoDoc)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.NumDoc)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Pais)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Email)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Telefono)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.Estado)
                            </th>

                    </thead>

                    <tbody>

                            <tr>
                                <td>
                                    @Html.DisplayFor(model => model.ClienteId)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.Nombre)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.Apellidos)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.IdTipoDoc)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.IdTipoDoc)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.NumDoc)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.Pais)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.Telefono)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.Estado)
                                </td>
                            </tr>
                        
                    </tbody>

                </table>
                <div class="form-group">
                    <input type="button" value="Editar" class="btn btn-primary" onclick="Editar()" />
                </div>
            </div>


        </div>

