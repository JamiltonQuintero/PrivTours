@model PrivTours.ViewModels.EditarRolViewModel
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Editar rol</h1>

                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Inicio</a></li>
                        <li class="breadcrumb-item active">Usuarios</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
        <hr />
    </div>
    <!-- /.content-header -->
    <!-- Main content -->

    <div class="content">

        <div class="container-fluid">
            <div class="row">
                <div class="col-md-6">

                    <form method="post" class="mt-3">
                        <div class="form-group row">
                            <label asp-for="Id" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="Id" disabled class="form-control">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="NombreRol" class="col-sm-2 col-form-label">Nombre</label>
                            <div class="col-sm-10">
                                <input asp-for="NombreRol" class="form-control">
                                @*<span asp-validation-for="NombreRol" class="text-danger"></span>*@
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            </div>
                        </div>



                        <div class="row col-auto">
                            <div>
                                <a asp-action="Index" class="btn btn-outline-secondary">Volver</a>
                            </div>
                            <br />
                            <div class="form-group col-auto">
                                <input type="button" value="Guardar" class="btn btn-primary" onclick="editarRol()" />
                            </div>
                        </div>


                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {

    <script>
        function editarRol() {

            Swal.fire({
                title: "Editar rol",
                text: "¿Estás seguro que desea editar el rol?",
                showDenyButton: true,
                showCancelButton: true,
                confirmButtonText: 'Guardar',
                denyButtonText: 'No guardar',
            }).then((result) => {
                if (result.isConfirmed) {
                    document.getElementById('formulario').submit();

                } else if (result.isDenied) {
                    Swal.fire('¡rol no editado!', '', 'info')
                }
            })
        }

        @if (TempData["Mensaje"] != null && TempData["Accion"].ToString().Equals("Editar"))
    {
        <text>

            Swal.fire({
                title: "¡Felicitaciones!",
                type: "success",
                html: "@TempData["Mensaje"]",
                icon: 'success',
                timer: 3000
            });

        </text>
    }

    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}