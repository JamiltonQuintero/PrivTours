@using Microsoft.AspNetCore.Identity
@inject SignInManager<PrivTours.Models.Entities.UsuarioIdentity> SignInManager
@inject UserManager<PrivTours.Models.Entities.UsuarioIdentity> UserManager
@section Styles{

}

<!-- Main Sidebar Container -->
<aside class="main-sidebar sidebar-dark-primary elevation-4">
    <!-- Brand Logo -->
    <a asp-action="Dashboard" asp-controller="Admin" class="brand-link">
        <img src="~/Recursos/Colombia-best-private-tour.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
        <span class="brand-text font-weight-light">Private Tours</span>
    </a>

    <!-- Sidebar -->
    <div class="sidebar dark-mode">
        <!-- Sidebar user panel (optional) -->
        <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            <div class="image">
                <img src="~/adminlte/dist/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
            </div>
            <div class="info">
                @if (SignInManager.IsSignedIn(User))
                {
                    <a class="d-block">@User.Identity.Name</a>
                } else
                {
                    <a class="d-block">Usuario</a>
                }
            </div>
        </div>

        <!-- SidebarSearch Form -->
        <div class="form-inline">
            <div class="input-group" data-widget="sidebar-search">
                <input class="form-control form-control-sidebar" type="search" placeholder="Search" aria-label="Search">
                <div class="input-group-append">
                    <button class="btn btn-sidebar">
                        <i class="fas fa-search fa-fw"></i>
                    </button>
                </div>
            </div>
        </div>

        <!-- Sidebar Menu -->
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                <!-- Add icons to the links using the .nav-icon class
    with font-awesome or any other icon font library -->

                <li class="nav-item">
                    <a asp-action="Dashboard" asp-controller="Admin" class="nav-link">

                        <i class="nav-icon fas fa-chart-line"></i>
                        <p>
                            Dashboard

                        </p>
                    </a>
                </li>
                <!-- 
    HttpContext.Session.GetString("_Name")-->
                <li class="nav-item">
                    <a asp-action="Index" asp-controller="Roles" class="nav-link">
                        <i class="nav-icon fas fa-user-cog"></i>
                        <p>
                            Configuración
                        </p>
                    </a>
                </li>

                <li class="nav-item">
                    <a asp-action="Index" asp-controller="Usuarios" class="nav-link">
                        <i class="nav-icon fas fa-users"></i>
                        <p>
                            Usuarios
                        </p>
                    </a>
                </li>

                <li class="nav-item">
                    <a asp-action="Index" asp-controller="Empleados" class="nav-link">

                        <i class="nav-icon far fa-address-card"></i>
                        <p>
                            Empleados

                        </p>
                    </a>
                </li>

                <li class="nav-item">
                    <a asp-action="Index" asp-controller="Clientes" class="nav-link">

                        <i class="nav-icon fas fa-people-arrows"></i>

                        <p>
                            Clientes

                        </p>
                    </a>
                </li>

                <li class="nav-item">
                    <a asp-action="Index" asp-controller="Servicios" class="nav-link">

                        <i class="nav-icon fas fa-exchange-alt"></i>
                        <p>
                            Servicios

                        </p>
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-action="Index" asp-controller="Solicitudes" class="nav-link">


                        <i class="nav-icon fas fa-route"></i>
                        <p>
                            Solicitud Servicios

                        </p>
                    </a>
                </li>

                <li class="nav-item">
                    <a asp-action="Index" asp-controller="Tareas" class="nav-link">

                        <i class="nav-icon fas fa-clipboard-list"></i>
                        <p>
                            Tareas
                        </p>
                    </a>
                </li>

                @if (SignInManager.IsSignedIn(User))
                {
                    <li class="nav-item">
                        <a asp-action="CerrarSesion" asp-controller="Usuarios" class="nav-link">
                            <i class="nav-icon fas fa-sign-out-alt"></i>
                            <p>
                                Cerrar sesión
                                <span class="right badge badge-danger">Salir</span>

                            </p>
                        </a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a asp-action="Login" asp-controller="Usuarios" class="nav-link">
                            <i class="nav-icon fas fa-sign-out-alt"></i>
                            <p>
                                Iniciar sesión
                                <span class="right badge badge-success">Ingresar</span>

                            </p>
                        </a>
                    </li>
                }
            </ul>
        </nav>
        <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
</aside>

@section Scripts{


}